<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog id="addDialog" title="{i18n>addPlayer}">
		<content>
			<core:Fragment fragmentName="players.view.fragment.PlayerForm" type="XML"/>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button id="messagePopoverBtn" press=".handleMessagePopoverPress" ariaHasPopup="Dialog" />
					<ToolbarSpacer />
					<Button type="Accept" text="Save" press="._generateInvalidUserInput" />
					<Button id="Reject" text="Reject" type="Reject" press="._closeDialog" ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>