<mvc:View
	controllerName="players.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
>
	<f:DynamicPage
		id="dynamicPageId"
		toggleHeaderOnTitleClick="false"
	>
		<f:header>
			<f:DynamicPageHeader>
				<SearchField
					search=".onSearch"
					width="17.5rem"
				/>
				<OverflowToolbarButton
					icon="sap-icon://add"
					text="Add"
					type="Transparent"
					press=".onAdd"
				/>
				<OverflowToolbarButton
					icon="sap-icon://sort"
					text="Sort"
					type="Transparent"
					press=".onSort"
				/>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Products ({products>/ProductCollectionStats/Counts/Total})"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Content -->
		<f:content>
			<List
				id="players"
				items="{/AttributesSet}"
				itemPress="onItemPress"
			>
				<StandardListItem
					description="{position}"
					title="{club}"
					type="Navigation"
				/>
			</List>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					type="Accept"
					text="Accept"
				/>
				<Button
					type="Reject"
					text="Reject"
				/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>